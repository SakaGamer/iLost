<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/user_img_circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/vh_post_detail_user_img"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/vh_post_detail_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_toEndOf="@id/user_img_circle"
            android:layout_toRightOf="@id/user_img_circle"
            android:maxLines="1"
            android:text="username"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vh_post_detail_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vh_post_detail_user_name"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/user_img_circle"
            android:layout_toRightOf="@id/user_img_circle"
            android:maxLines="1"
            android:text="@string/comment" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorViolet" />

</LinearLayout>